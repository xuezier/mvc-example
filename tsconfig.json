{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es7"],
    "types": ["reflect-metadata", "node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "app"
  },
  "include": [
    "server/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}